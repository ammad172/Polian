@model ShoppingCartDto
@await Component.InvokeAsync("Notyf")
@if (Model.ShoppingCartHeader != null && Model.shoppingCartDetail?.Count() > 0)
{
    <form method="post">
        <br />
        <input type="hidden" asp-for="ShoppingCartHeader.UserId" />
        <input type="hidden" asp-for="ShoppingCartHeader.ShoppingCartId" />
        <div class="">
            <div class="card border mt-4 container">
                <div class="card-header bg-dark text-light ml-0 row ">
                    <div class="col-6">
                        <h3 class="text-success"><i class="bi bi-cart"></i> &nbsp; Shopping Cart</h3>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary mt-2 btn-sm">Continue Shopping</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class=" d-none d-lg-block">
                        <div class="row text-info">
                            <div class="col-lg-2">
                            </div>
                            <div class="col-lg-5">
                                Product Details
                            </div>
                            <div class="col-lg-2">
                                Price
                            </div>
                            <div class="col-lg-2">
                                Count
                            </div>
                            <div class="col-lg-1">
                            </div>
                        </div>
                    </div>
                    <hr />
                    @foreach (var item in Model.shoppingCartDetail)
                    {
                        <div class="row h-100">
                            <div class="col-4 col-md-2 text-center py-2">
                                <img class="rounded" width="100%" />
                            </div>
                            <div class="col-8 col-md-5">
                                <h5>@item.product.Name</h5>
                                <div style="font-size:11px;">@Html.Raw(item.product.Description)</div>
                            </div>
                            <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                                <span style="font-size:17px;">@string.Format("{0:c}", item.product.Price) </span>
                            </div>
                            <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                                <span style="font-size:17px;"> @item.Count</span>
                            </div>
                            <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                <a class="btn btn-sm btn-danger" asp-action="Remove" asp-route-CardDetailId="@item.CardDetailId">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </div>
                    }
                    <hr />
                    <div class="row">
                        @if (Model.ShoppingCartHeader.CouponCode == null)
                        {
                            <div class="col-6">
                                <span>Coupon:</span>
                                <input asp-for="ShoppingCartHeader.CouponCode" />
                                <button asp-action="ApplyCoupon" type="submit" class="btn btn-sm btn-success"> Apply </button>
                            </div>
                        }
                        else
                        {
                            <div class="col-6">
                                <span>Coupon:</span>
                                <input asp-for="ShoppingCartHeader.CouponCode" />
                                <button asp-action="RemoveCoupon" type="submit" class="btn btn-sm btn-success"> Remove </button>
                            </div>

                        }
                        <div class="col-6 text-end">
                            <span class="text-danger" style="font-size:21px;">  Order Total : @string.Format("{0:c}", Model.ShoppingCartHeader.CartTotal) <br /></span>
                            <span class="text-success"> Order Discount :  @(Model.ShoppingCartHeader.Discount == null ? "none" : Model.ShoppingCartHeader.Discount)</span>
                        </div>
                    </div>
                </div>
                <div class="card-footer row">
                    <div class="col-6 col-md-3 ">
                        <button type="submit" class="btn form-control btn-danger">Email Cart</button>
                    </div>
                    <div class="col-6 col-md-3 offset-md-6">
                        <a asp-action="Checkout" class="btn btn-success form-control btn-success" value="">Looks Good</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
}