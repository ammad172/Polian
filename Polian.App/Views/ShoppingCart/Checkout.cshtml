@model ShoppingCartDto

@await Component.InvokeAsync("Notyf")
<form method="post">
    <input type="hidden" asp-for="ShoppingCartHeader.ShoppingCartId" />
    <input type="hidden" asp-for="ShoppingCartHeader.UserId" />
    <input type="hidden" asp-for="ShoppingCartHeader.CouponCode" />
    <input type="hidden" asp-for="ShoppingCartHeader.Discount" />
    <input type="hidden" asp-for="ShoppingCartHeader.CartTotal" />
    <div class="border mt-2 p-4 rounded">
        <div class="container row">
            <div class="col-md-7 col-12">
                <span style="font-size:25px;" class="text-warning mb-2">Order Summary</span>
            </div>
            <div class="col-md-5 col-12">
                <a asp-action="CartIndex" class="btn btn-outline-warning form-control">Back to Cart</a>
            </div>
            <br /><br /><br />
            <hr />
            <div class="col-7">
                <div class="row pt-2">
                    <div class="col-12 py-2">
                        <input asp-for="ShoppingCartHeader.Name" placeholder="Name..." class="form-control" />
                        <span asp-validation-for="ShoppingCartHeader.Name" class="text-danger"></span>
                    </div>
                    <div class="col-12 py-2">
                        <input asp-for="ShoppingCartHeader.Email" placeholder="Email..." class="form-control" />
                        <span asp-validation-for="ShoppingCartHeader.Email" class="text-danger"></span>

                    </div>
                    <div class="col-12 py-2">
                        <input asp-for="ShoppingCartHeader.PhoneNumber" class="form-control" placeholder="Phone Number..." />
                        <span asp-validation-for="ShoppingCartHeader.PhoneNumber" class="text-danger"></span>

                    </div>
                    <div class="col-12 pt-2">
                        <label class="col-form-label">Order will be ready in 30minutes after placing order. If you place order when restaurant is closed it will be ready next day.</label>
                    </div>

                </div>
            </div>
            <div class="col-5">
                <div class="card mt-2">
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row text-danger">
                                <div class="col-6">
                                    Product Details
                                </div>

                                <div class="col-3">
                                    Price
                                </div>
                                <div class="col-3">
                                    Count
                                </div>
                            </div>
                        </div>
                        <hr />
                        @foreach (var item in Model.shoppingCartDetail)
                        {
                            <div class="row h-100">
                                <div class="col-6">
                                    <span style="font-size:20px">@item.product.Name </span>
                                </div>

                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @item.product.Price </span>

                                </div>
                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @item.Count</span>
                                </div>
                            </div>
                        }

                        <hr />
                        <div class="row">
                            <div class="col-12 text-center pr-4 text-danger">
                                Order Total :  @string.Format("{0:c}", Model.ShoppingCartHeader.CartTotal) <br />
                                <span class="text-success"> Order Discount :  @string.Format("{0:c}", Model.ShoppingCartHeader.Discount) </span>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="row">

                            <div class="col-12 ">
                                <button type="submit" class="btn btn-success form-control ">
                                    <span>Place Order</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

